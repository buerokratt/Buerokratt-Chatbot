{
  "action_type": "BLOGIC",
  "destination": [
    {
      "reflect_input": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{dmapper_url}/json/v2/reflect_user",
          "post_body_parameters": {
            "check_roles": {
              "method": "post",
              "endpoint": "{ruuter_url}/match_input",
              "post_body_parameters": {
                "userinfo": {
                  "cookies": [
                    "customJwtCookie"
                  ],
                  "method": "post",
                  "endpoint": "{tim_url}/jwt/custom-jwt-userinfo",
                  "post_body_struct": "customJwtCookie"
                }
              },
              "post_body_struct": {
                "input": {
                  "authorities": "{$.userinfo$.authorities}"
                },
                "validate_against": {
                  "authorities": [
                    "ROLE_ADMINISTRATOR"
                  ]
                },
                "validation_type": "MUST_MATCH_ANY"
              },
              "response": {
                "ok": "proceed",
                "nok": "stop"
              }
            }
          },
          "post_body_struct": {
            "userIdCode": "{#.userIdCode}",
            "displayName": "{#.displayName}",
            "csaTitle": "{#.csaTitle}",
            "csa_email": "{#.csa_email}",
            "roles": "{#.roles}"
          }
        },
        "response": {
          "nok": "stop",
          "ok": "proceed"
        }
      }
    },
    {
      "check_user_exists": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{ruuter_url}/match_input",
          "post_body_parameters": {
            "get_user": {
              "method": "post",
              "endpoint": "{resql_url}/get-user",
              "post_body_struct": {
                "userIdCode": "{#.reflect_input#.userIdCode}"
              }
            }
          },
          "post_body_struct": {
            "input": {
              "id_code": "{$.get_user[0]$.idCode}"
            },
            "validate_against": {
              "id_code": "{#.reflect_input#.userIdCode}"
            },
            "validation_type": "MUST_MATCH_ANY"
          },
          "response": {
            "nok": "proceed",
            "ok": "stop"
          }
        },
        "response": {
          "nok": "proceed",
          "ok": "stop"
        }
      }
    },
    {
      "add_user": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{resql_url}/update-user",
          "post_body_struct": {
            "created": "$_getInstant()",
            "status": "active",
            "userIdCode": "{#.reflect_input#.userIdCode}",
            "displayName": "{#.reflect_input#.displayName}",
            "csaTitle": "{#.reflect_input#.csaTitle}",
            "csa_email": "{#.reflect_input#.csa_email}"
          }
        }
      }
    },
    {
      "add_roles": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{resql_url}/update-user-role",
          "post_body_struct": {
            "userIdCode": "{#.reflect_input#.userIdCode}",
            "roles": "{#.reflect_input#.roles}",
            "created": "$_getInstant()"
          }
        },
        "response": {
          "nok": "stop",
          "ok": "proceed"
        }
      }
    }
  ]
}
