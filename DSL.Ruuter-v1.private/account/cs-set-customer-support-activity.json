{
  "action_type": "BLOGIC",
  "destination": [
    {
      "set_customer_support_activity": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{resql_url}/set-customer-support-status",
          "post_body_parameters": {
            "userinfo": {
              "cookies": [
                "customJwtCookie"
              ],
              "method": "post",
              "endpoint": "{tim_url}/jwt/custom-jwt-userinfo",
              "post_body_struct": "customJwtCookie",
              "response": {
                "ok": "proceed",
                "nok": "stop"
              }
            },
            "check_roles": {
              "method": "post",
              "endpoint": "{ruuter_url}/match_input",
              "cookies": [
                "customJwtCookie"
              ],
              "post_body_parameters": {
                "userinfo": {
                  "cookies": [
                    "customJwtCookie"
                  ],
                  "method": "post",
                  "endpoint": "{tim_url}/jwt/custom-jwt-userinfo",
                  "post_body_struct": "customJwtCookie",
                  "response": {
                    "ok": "proceed",
                    "nok": "stop"
                  }
                }
              },
              "post_body_struct": {
                "input": {
                  "authorities": "{$.userinfo$.authorities}"
                },
                "validate_against": {
                  "authorities": [
                    "ROLE_ADMINISTRATOR",
                    "ROLE_CUSTOMER_SUPPORT_AGENT",
                    "ROLE_SERVICE_MANAGER"
                  ]
                },
                "validation_type": "MUST_MATCH_ANY"
              },
              "response": {
                "ok": "proceed",
                "nok": "stop"
              }
            }
          },
          "post_body_struct": {
            "active": "{#.customerSupportActive}",
            "userIdCode": "{$.userinfo$.idCode}",
            "status": "{#.customerSupportStatus}",
            "created": "$_getInstant()"
          }
        },
        "response": {
          "ok": "proceed",
          "nok": "stop"
        }
      }
    }
  ]
}
