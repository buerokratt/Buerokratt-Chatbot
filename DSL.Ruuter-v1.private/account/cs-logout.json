{
  "action_type": "BLOGIC",
  "destination": [
    {
      "set_customer_support_agent_away": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "cookies": ["customJwtCookie"],
          "method": "post",
          "endpoint": "{resql_url}/set-customer-support-status",
          "post_body_parameters": {
            "check_roles": {
              "method": "post",
              "endpoint": "{ruuter_url}/match_input",
              "post_body_struct": {
                "input": {
                  "authorities": "{$.userinfo$.authorities}"
                },
                "validate_against": {
                  "authorities": [
                    "ROLE_ADMINISTRATOR",
                    "ROLE_CUSTOMER_SUPPORT_AGENT",
                    "ROLE_CHATBOT_TRAINER",
                    "ROLE_ANALYST",
                    "ROLE_UNAUTHENTICATED",
                    "ROLE_SERVICE_MANAGER"
                  ]
                },
                "validation_type": "MUST_MATCH_ANY"
              },
              "post_body_parameters": {
                "userinfo": {
                  "cookies": ["customJwtCookie"],
                  "method": "post",
                  "endpoint": "{tim_url}/jwt/custom-jwt-userinfo",
                  "post_body_struct": "customJwtCookie"
                }
              },
              "response": {
                "ok": "proceed",
                "nok": "stop"
              }
            },
            "userinfo": {
              "cookies": ["customJwtCookie"],
              "method": "post",
              "endpoint": "{ruuter_url}/cs-custom-jwt-userinfo",
              "post_body_struct": "customJwtCookie",
              "response": {
                "ok": "proceed",
                "nok": "stop"
              }
            }
          },
          "post_body_struct": {
            "active": false,
            "userIdCode": "{$.userinfo$.data$.custom_jwt_userinfo$.idCode}",
            "created": "$_getInstant()",
            "status": "offline"
          },
          "response_header": {
            "Set-Cookie": {
              "name": "customJwtCookie",
              "httpOnly": true,
              "maxAge": 0,
              "domain": "{cookie_domain}",
              "setSecure": true,
              "value": null
            }
          },
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        }
      }
    },
    {
      "blacklist_custom_jwt": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "proceed"
          }
        },
        "proceed": {
          "cookies": ["customJwtCookie"],
          "method": "post",
          "endpoint": "{tim_url}/jwt/custom-jwt-blacklist",
          "post_body_struct": "customJwtCookie",
          "response_header": {
            "Set-Cookie": {
              "name": "customJwtCookie",
              "httpOnly": true,
              "maxAge": 0,
              "domain": "{cookie_domain}",
              "setSecure": true,
              "value": null
            }
          },
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        }
      }
    }
  ]
}
