{
  "action_type": "BLOGIC",
  "destination": [
    {
      "reflect_input": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{dmapper_url}/json/v2/reflect_post_message",
          "post_body_struct": {
            "chatId": "{#.chatId}",
            "authorTimestamp": "{#.authorTimestamp}",
            "authorRole": "{#.authorRole}",
            "content": "{#.content}",
            "event": "{#.event}",
            "holidays": "{#.holidays}",
            "holidayNames": "{#.holidayNames}"
          }
        },
        "response": {
          "ok": "proceed",
          "nok": "stop"
        }
      }
    },
    {
      "verify_chat_not_ended": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{ruuter_url}/match_input",
          "post_body_struct": {
            "input": {
              "chat_id": "{$.get_not_ended_chat[0]$.id}"
            },
            "validate_against": {
              "chat_id": "{#.reflect_input#.chatId}"
            },
            "validation_type": "MUST_MATCH_EXACT"
          },
          "post_body_parameters": {
            "get_not_ended_chat": {
              "method": "post",
              "endpoint": "{resql_url}/get-active-chat-by-id",
              "post_body_struct": {
                "id": "{#.reflect_input#.chatId}"
              },
              "response": {
                "ok": "proceed",
                "nok": "stop"
              }
            }
          },
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        }
      }
    },
    {
      "get_message_uuid": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{ruuter_url}/functions/generateRandomUuid",
          "post_body_struct": {}
        },
        "response": {
          "ok": "proceed",
          "nok": "stop"
        }
      }
    },
    {
      "insert_message": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{resql_url}/insert-message",
          "post_body_parameters": {
            "match_user_chat_id": {
              "method": "post",
              "endpoint": "{ruuter_url}/match_input",
              "post_body_struct": {
                "input": {
                  "chat_id": "{$.chat_info$.chatId}"
                },
                "validate_against": {
                  "chat_id": "{#.reflect_input#.chatId}"
                },
                "validation_type": "MUST_MATCH_EXACT"
              },
              "post_body_parameters": {
                "chat_info": {
                  "cookies": ["chatJwt"],
                  "method": "post",
                  "endpoint": "{tim_url}/jwt/custom-jwt-userinfo",
                  "post_body_struct": "chatJwt",
                  "post_body_parameters": {
                    "validate_message_length": {
                      "method": "post",
                      "endpoint": "{ruuter_url}/param_string_length",
                      "post_body_struct": {
                        "input": "{#.reflect_input#.content}",
                        "min": 1,
                        "max": 3000
                      },
                      "response": {
                        "ok": "proceed",
                        "nok": "stop"
                      }
                    }
                  },
                  "response": {
                    "ok": "proceed",
                    "nok": "stop"
                  }
                }
              },
              "response": {
                "ok": "proceed",
                "nok": "stop"
              }
            }
          },
          "post_body_struct": {
            "chatId": "{#.reflect_input#.chatId}",
            "messageId": "{#.get_message_uuid#.output}",
            "content": "{#.reflect_input#.content}",
            "event": "{#.reflect_input#.event}",
            "authorTimestamp": "{#.reflect_input#.authorTimestamp}",
            "authorId": "",
            "authorFirstName": "",
            "authorLastName": "",
            "authorRole": "{#.reflect_input#.authorRole}",
            "rating": "",
            "forwardedByUser": "",
            "forwardedFromCsa": "",
            "forwardedToCsa": "",
            "created": "$_getInstant()"
          }
        },
        "response": {
          "ok": "proceed",
          "nok": "stop"
        }
      }
    },
    {
      "post_message_to_bot": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{ruuter_v2_url}/post-message-to-bot",
          "post_body_struct": {
            "chatId": "{#.reflect_input#.chatId}",
            "content": "{#.reflect_input#.content}",
            "authorId": "",
            "holidays": "{#.reflect_input#.holidays}",
            "holiday_names": "{#.reflect_input#.holidayNames}"
          },
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        }
      }
    }
  ]
}
