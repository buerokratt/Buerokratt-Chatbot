{
  "action_type": "BLOGIC",
  "destination": [
    {
      "reflect_input": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{dmapper_url}/json/v2/reflect_message_preview",
          "post_body_struct": {
            "chatId": "{#.chatId}",
            "content": "{#.content}"
          }
        }
      }
    },
    {
      "get_message_uuid": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{ruuter_url}/functions/generateRandomUuid",
          "post_body_struct": {}
        },
        "response": {
          "ok": "proceed",
          "nok": "stop"
        }
      }
    },
    {
      "post_message_preview": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{resql_url}/insert-message-preview",
          "post_body_struct": {
            "chatId": "{#.reflect_input#.chatId}",
            "messageId": "{#.get_message_uuid#.output}",
            "content": "{#.reflect_input#.content}",
            "event": "typing",
            "created": "$_getInstant()"
          },
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        }
      }
    }
  ]
}
