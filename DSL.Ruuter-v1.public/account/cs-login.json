{
  "action_type": "BLOGIC",
  "destination": [
    {
      "cs_login": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{resql_url}/get-user-with-roles",
          "post_body_struct": {
            "login": "{#.login}",
            "password": "{#.password}"
          }
        },
        "response": {
          "ok": "proceed",
          "nok": "proceed"
        }
      }
    },
    {
      "get_session_length": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{ruuter_url}/cs-get-session-length",
          "post_body_struct": {},
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "response": {
          "ok": "proceed",
          "nok": "stop"
        }
      }
    },
    {
      "custom_jwt_cookie": {
        "verify": {
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "proceed": {
          "method": "post",
          "endpoint": "{tim_url}/jwt/custom-jwt-generate",
          "response_header": {
            "Set-Cookie": {
              "#.from_property": "{#.custom_jwt_cookie}",
              "maxAge": 28800,
              "setSecure": true,
              "domain": "{cookie_domain}",
              "name": "customJwtCookie"
            }
          },
          "post_body_struct": {
            "JWTName": "customJwtCookie",
            "expirationInMinutes": "{#.get_session_length#.data#.cs_get_session_length[0]#.value}",
            "content": "{#.cs_login[0]}"
          },
          "response": {
            "ok": "proceed",
            "nok": "stop"
          }
        },
        "response": {
          "ok": "proceed",
          "nok": "stop"
        }
      }
    }
  ]
}
